# .editorconfig
# Ensures consistent coding styles across frontend & backend
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Java (backend)
[*.java]
indent_size = 4
continuation_indent_size = 8
max_line_length = 120

# TypeScript / JavaScript (frontend)
[*.{ts,tsx,js,jsx}]
indent_size = 2
quote_type = double
max_line_length = 100

# JSON / YAML
[*.{json,yml,yaml}]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false